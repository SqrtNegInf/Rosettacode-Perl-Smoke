#!/usr/local/bin/perl
#u# http://rosettacode.org/wiki/Trigonometric_functions
#c# 2018-08-09 <RC
#p# OK

use feature 'say';
my $result;

# Works with: Perl version 5.8.8
use Math::Trig;

my $angle_degrees = 45;
my $angle_radians = pi / 4;

$result .= sin($angle_radians). ' '. sin(deg2rad($angle_degrees)). "\n";
$result .= cos($angle_radians). ' '. cos(deg2rad($angle_degrees)). "\n";
$result .= tan($angle_radians). ' '. tan(deg2rad($angle_degrees)). "\n";
$result .= cot($angle_radians). ' '. cot(deg2rad($angle_degrees)). "\n";
my $asin = asin(sin($angle_radians));
$result .= $asin. ' '. rad2deg($asin). "\n";
my $acos = acos(cos($angle_radians));
$result .= $acos. ' '. rad2deg($acos). "\n";
my $atan = atan(tan($angle_radians));
$result .= $atan. ' '. rad2deg($atan). "\n";
my $acot = acot(cot($angle_radians));
$result .= $acot. ' '. rad2deg($acot). "\n";

say $result; 
my $ref = <<'EOD';
0.707106781186547 0.707106781186547
0.707106781186548 0.707106781186548
1 1
1 1
0.785398163397448 45
0.785398163397448 45
0.785398163397448 45
0.785398163397448 45
EOD

use Test::More;
is ($result, $ref);
done_testing();
