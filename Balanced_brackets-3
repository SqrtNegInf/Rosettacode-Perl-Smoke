#!/usr/local/bin/perl
#u# http://rosettacode.org/wiki/Balanced_brackets
#c# 2018-07-16 <RC
#p# OK

srand 123456;

use feature 'say';
my $result;

sub balanced {
    my $depth = 0;
    for (split //, shift) {
        if    ($_ eq '[') { ++$depth }
        elsif ($_ eq ']') { return if --$depth < 0 }
    }
    return !$depth
}

sub generate {
    my $n = shift;
    my $str = '[' x $n;
    substr($str, rand($n + $_), 0) = ']' for 1..$n;
    return $str;
}

for (0..8) {
    my $input = generate($_);
    $result .= (sprintf balanced($input) ? " ok:" : "bad:") . " '$input'\n";
}

say $result; 

my $ref = <<END;
 ok: ''
 ok: '[]'
 ok: '[[]]'
bad: ']]][[['
 ok: '[][][[]]'
bad: ']][]]][[[['
 ok: '[][][[]][[]]'
 ok: '[[[]][[][[]]]]'
bad: ']][][[[]]]][[[[]'
END

use Test::More;
is ($result, $ref);
done_testing();
