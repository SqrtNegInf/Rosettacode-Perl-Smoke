#!/usr/local/bin/perl
#u# http://rosettacode.org/wiki/Array_concatenation
#c# 2018-07-14 <RC
#p# OK

use feature 'say';
my $result;

# In Perl, arrays placed into list context are flattened:

my @arr1 = (1, 2, 3);
my @arr2 = (4, 5, 6, 7);
my @arr3 = (@arr1, @arr2);

# The push function appends elements onto an existing array:

my @arr1 = (1, 2, 3);
my @arr2 = (4, 5, 6);
push @arr1, @arr2;
$result = "@arr1\n"; # prints "1 2 3 4 5 6"


my $ref = <<EOD;
1 2 3 4 5 6
EOD

use Test::More;
is ($result, $ref);
is (+@arr3, 7);
done_testing();
