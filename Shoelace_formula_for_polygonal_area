    $a += $p[$_][0] * $p[($_+1)%@p][1] - $p[$_][1] * $p[($_+1)%@p][0] for 0 .. $#p;
    return abs $a/2;
}
 
print area_by_shoelace( [ [3,4], [5,11], [12,8], [9,5], [5,6] ] )</lang>
{{out}}
