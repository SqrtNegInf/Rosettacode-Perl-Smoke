    my $y;
    my $cnt = 0;
    while (1) { 
        $cnt++;
        $y = $cnt and last if 0 == base($cnt, 2) % $x;
    }
    my $z = base($y, 2);
    printf "%4d: %30s  %30d\n", $x, $z, $z/$x;
}

