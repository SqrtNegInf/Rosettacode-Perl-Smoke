#!/usr/local/bin/perl
#u# http://rosettacode.org/wiki/Motzkin_numbers
#c# 2021-08-14 <RC
#p# OK

my @res;

use strict;
use warnings;
use feature 'say';

use ntheory qw( is_prime );

sub motzkin {
    my $N = shift;
    my @m = ( 0, 1, 1 );
    for my $i ( 3 .. $N ) {
        $m[$i] = ($m[$i - 1] * (2 * $i - 1) + $m[$i - 2] * (3 * $i - 6)) / ($i + 1);
    }
    return splice @m, 1;
}

push @res, "  n          M[n]";
my $count = 0;
for ( motzkin(42) ) {
    push @res, sprintf "%3d%25s  %s", $count++, s/\B(?=(\d\d\d)+$)/,/gr, is_prime($_) ? 'prime' : '';
}

say my $result = join "\n", @res;

my $ref = <<'EOD';
  n          M[n]
  0                        1  
  1                        1  
  2                        2  prime
  3                        4  
  4                        9  
  5                       21  
  6                       51  
  7                      127  prime
  8                      323  
  9                      835  
 10                    2,188  
 11                    5,798  
 12                   15,511  prime
 13                   41,835  
 14                  113,634  
 15                  310,572  
 16                  853,467  
