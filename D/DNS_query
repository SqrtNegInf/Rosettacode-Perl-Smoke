#!/usr/local/bin/perl
#u# http://rosettacode.org/wiki/DNS_query
#c# 2018-07-28 <RC
#p# OK

use strict;
use warnings;
use feature 'say';

require 5.014;    # Older versions can't resolve IPv6 with just core Socket module
 
use Socket qw(getaddrinfo getnameinfo);
my ($err, @res) = getaddrinfo("www.kame.net", 0,
                { protocol=>Socket::IPPROTO_TCP } );
die "getaddrinfo error: $err" if $err;
 
my @r1 = getnameinfo($res[0]->{addr}, Socket::NI_NUMERICHOST);
my @r2 = getnameinfo($res[1]->{addr}, Socket::NI_NUMERICHOST);
print "$r1[1]\n";
print "$r2[1]\n";

use Test::More;
is ($r1[1], '210.155.141.200');
is ($r2[1], '2001:2f0::8800:226:2dff:fe0b:4311');
done_testing();

