#!/usr/local/bin/perl
#u# http://rosettacode.org/wiki/
#c# 2018-07-16 <RC
#p# OK

use feature 'say';
my $result;

sub binary_search {
    my ($array_ref, $value, $left, $right) = @_;
    while ($left <= $right) {
        my $middle = int(($right + $left) >> 1);
        if ($value == $array_ref->[$middle]) {
            return $middle;
        }
        elsif ($value < $array_ref->[$middle]) {
            $right = $middle - 1;
        }
        else {
            $left = $middle + 1;
        }
    }
    return -1;
}

my @data = ('aa'..'zz');
say $result = binary_search(\@data, 'qq', 0, -1 + scalar @data);

use Test::More;
is ($result, 337);
done_testing();
