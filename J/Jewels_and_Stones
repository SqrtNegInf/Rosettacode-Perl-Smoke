#!/usr/local/bin/perl
#u# http://rosettacode.org/wiki/Jewels_and_Stones
#c# 2018-09-06 >RC
#p# OK

use strict;
no warnings 'uninitialized'; # $S{$_} is sometimes undefined
use feature 'say';
my $result;

sub count_jewels {
    my( $j, $s ) = @_;
    my(%S);
    my $c = 0;

    $S{$_}++     for split //, $s;
    $c += $S{$_} for split //, $j;
    return "$c for $j in $s\n";
}
 
$result .= count_jewels 'aA' , 'aAAbbbb';
$result .= count_jewels 'z'  , 'ZZ';

say $result;
my $ref = <<'EOD';
3 for aA in aAAbbbb
0 for z in ZZ
EOD

use Test::More;
is ($result, $ref);
done_testing();
