#!/usr/local/bin/perl
#u# http://rosettacode.org/wiki/Jacobi_symbol
#c# 2020-01-08 >RC
#p# OK

use strict;
use warnings;
use feature 'say';

my @res;

# Jacobi function
sub J {
    my($k,$n) = @_;

    $k %= $n;
    my $jacobi = 1;
    while ($k) {
        while (0 == $k % 2) {
            $k = int $k / 2;
            $jacobi *= -1 if $n%8 == 3 or $n%8 == 5;
        }
        ($k, $n) = ($n, $k);
        $jacobi *= -1 if $n%4 == 3 and $k%4 == 3;
        $k %= $n;
    }
    $n == 1 ? $jacobi : 0
}

my $maxa = 1 + (my $maxn = 29);

my $header = 'n\k';
$header .= sprintf '%4d', $_ for 1..$maxa;
push @res, $header;
push @res, '   ' . '-' x (4 * $maxa);

for my $n (1..$maxn) {
    next if 0 == $n % 2;
    my $l;
    $l .= sprintf '%3d', $n;
    $l .= sprintf '%4d', J($_, $n) for 1..$maxa;
    push @res, $l;
}

say my $result = join "\n", @res;

my $ref = <<'END';
