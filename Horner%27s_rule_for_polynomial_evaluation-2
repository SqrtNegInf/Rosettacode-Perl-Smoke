#!/usr/local/bin/perl
#u# http://rosettacode.org/wiki/Horner%27s_rule_for_polynomial_evaluation
#c# 2018-08-13 <RC
#p# OK

use feature 'say';
my $result;

#Functional version[edit]
use strict;
use List::Util qw(reduce);

sub horner($$){
	my ($coeff_ref, $x) = @_;
	reduce { $a * $x + $b } reverse @$coeff_ref;
}

my @coeff = (-19.0, 7, -4, 6);
my $x = 3;
say $result = horner(\@coeff, $x);

use Test::More;
is ($result, 128);
done_testing();
