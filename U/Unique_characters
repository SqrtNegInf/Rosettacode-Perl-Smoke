my %seen;
binmode(STDOUT, ':encoding(utf8)');
map { s/(\X)/$seen{$1}++/egr } 
   "133252abcdeeffd", "a6789798st", "yxcdfgxcyz", "AĞÎ‘SÃ¤aoÃ¶Ù¥ğŸ¤”ğŸ‘¨â€ğŸ‘©â€ğŸ‘§â€ğŸ‘§";
my $uca = Unicode::Collate->new();

say my $result = join '', $uca->sort ( grep { $seen{$_} == 1 } keys %seen );

my $ref = 'ğŸ‘¨â€ğŸ‘©â€ğŸ‘§â€ğŸ‘§ğŸ¤”15Ù¥6AÃ¤bgoÃ¶sStzÎ‘Ğ';

