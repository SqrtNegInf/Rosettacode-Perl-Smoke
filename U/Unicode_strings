#!/usr/local/bin/perl
#u# http://rosettacode.org/wiki/Unicode_strings
#c# 2018-08-07 <RC
#p# OK

use strict;
use warnings;
use feature 'say';

use utf8;
binmode(STDOUT, ':utf8');

my $四十二 = "voilà";
say "$四十二";       # voilà
say uc($四十二);     # VOILÀ

use charnames qw(greek);
my($x,$y);
$x = "\N{sigma} \U\N{sigma}";
$y = "\x{2708}";
my $result = scalar reverse("$x $y");

"Say עִבְרִית" =~ /(\p{BidiClass:R})/g;  # עברית
say $result .= ' ' . $1;

use Test::More;
is ($result, '✈ Σ σ ע');
done_testing();
