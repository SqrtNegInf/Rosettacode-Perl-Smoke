#!/usr/local/bin/perl
#u# http://rosettacode.org/wiki/Percolation/Mean_run_density
#c# 2018-08-21 <RC
#p# OK

srand 123456;

use strict;
use warnings;
use feature 'say';
my $result;

# Translation of: Perl 6

sub R {
    my ($n, $p) = @_;
    my $r = join '',
    map { rand() < $p ? 1 : 0 } 1 .. $n;
    0+ $r =~ s/1+//g;
}

use constant t => 100;

$result .= sprintf "t= %d\n", t;
for my $p (<.1 .3 .5 .7 .9>) {
    $result .= sprintf "p= %f, K(p)= %f\n", $p, $p*(1-$p);  
    for my $n (<10 100 1000>) {
        my $r; $r += R($n, $p) for 1 .. t; $r /= $n;
        $result .= sprintf " R(n, p)= %f\n", $r / t;
    }
}

say $result; 
my $ref = <<'EOD';
t= 100
p= 0.100000, K(p)= 0.090000
 R(n, p)= 0.080000
 R(n, p)= 0.091200
 R(n, p)= 0.090300
p= 0.300000, K(p)= 0.210000
 R(n, p)= 0.211000
 R(n, p)= 0.211700
 R(n, p)= 0.209930
p= 0.500000, K(p)= 0.250000
 R(n, p)= 0.278000
 R(n, p)= 0.250000
 R(n, p)= 0.248710
p= 0.700000, K(p)= 0.210000
 R(n, p)= 0.256000
 R(n, p)= 0.211900
 R(n, p)= 0.213010
p= 0.900000, K(p)= 0.090000
 R(n, p)= 0.176000
 R(n, p)= 0.095600
 R(n, p)= 0.091870
EOD

use Test::More;
is ($result, $ref);
done_testing;
