#!/usr/local/bin/perl
#u# http://rosettacode.org/wiki/Prime_decomposition
#c# 2018-08-20 <RC
#p# OK

use feature 'say';
my $result;

sub prime_factors {
  my($n, $p, @out) = (shift, 3);
  return if $n < 1;
  while (!($n&1)) { $n >>= 1; push @out, 2; }
  while ($n > 1 && $p*$p <= $n) {
    while ( ($n % $p) == 0) {
      $n /= $p;
      push @out, $p;
    }
    $p += 2;
  }
  push @out, $n if $n > 1;
  @out;
}

say $result = join ' ', prime_factors(1001);
my $ref = <<'END';
END

use Test::More;
is ($result, '7 11 13');
done_testing();
