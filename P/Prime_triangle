#!/usr/local/bin/perl
#u# http://rosettacode.org/wiki/Prime_triangle
#t# inprogress
#c# 2022-04-xx >RC
#p# OK

use Data::Printer;          # debug only
use Time::HiRes qw(sleep);  # debug only

my @res;

use strict;
use warnings;
use feature 'say';

use ntheory 'is_prime';
use List::AllUtils qw(zip sum natatime);
use Algorithm::Combinatorics qw(permutations);

say '1 2';

my @count = (0, 0, 1);

for my $n (3..10) { # ..17
    my @even_nums = grep { 0 == $_ % 2 } 2..$n-1;
    my @odd_nums  = grep { 1 == $_ % 2 } 3..$n-1;
    for my $e (permutations [@even_nums]) {
#say 'e'; p @$e; #sleep 1;
        next if $$e[0] == 8 or $$e[0] == 14;
        my $nope = 0;
        for my $o (permutations [@odd_nums]) {
#say 'o'; p @$o; #sleep 1;
            next unless is_prime($$e[0] + $$o[0]);
#next;
            my @list;
            my $it = natatime($n, zip @$e, @$o);
            while (my $rr = $it->()) { say "rr: $rr" ;  push @list, $rr }
say 'list' ; p @list; sleep 3;
            for (@list) {
                $nope++ and last unless is_prime(sum @$_);
            }
            unless ($nope) {
                #say '1 ' . join ' ', @list unless $count[$n];
say "count[$n]";
                $count[$n]++;
            }
            $nope = 0;
        }
    }
}

shift @count;
shift @count;
say "\n" . join ' ',  @count; # [2..*].join: ' ';

__END__

my $ref = <<'END';
END

use Test::More;
chomp $ref;
is($result, $ref);
done_testing();

