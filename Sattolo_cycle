#!/usr/local/bin/perl
#u# http://rosettacode.org/wiki/Sattolo_cycle
#c# 2018-09-05 >RC
#p# OK
#n# let it be random to see if it ever fails

use feature 'say';

@a = 0..30;

printf "%2d ", $_ for @a; print "\n";
sattolo_cycle(\@a);
printf "%2d ", $_ for @a; print "\n";

sub sattolo_cycle {
    my($array) = @_;
    for $i (reverse 0 .. -1+@$array) {
        my $j = int rand $i;
        @$array[$j, $i] = @$array[$i, $j];
    }
}

use Test::More;
$a[$_] == $_ ? ok (1 == 0) : '' for 0..30;
ok (1 == 1);
done_testing();
