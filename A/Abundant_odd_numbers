#!/usr/local/bin/perl
#u# http://rosettacode.org/wiki/Nice_numbers
#c# 2019-05-xx >RC
#p# OK

use strict;
use warnings;

sub nice {
    my($n) = @_;
    my $sum;
    map { $sum += $_ unless $n%$_ } 1 .. $n-1;
    $n < $sum ? $n : ();
}

my @nice;
my $n = 3;
do { push @nice, nice($n++) } until @nice == 25;

print "@nice\n";

use Test::More;
is (join(' ',@nice), '12 18 20 24 30 36 40 42 48 54 56 60 66 70 72 78 80 84 88 90 96 100 102 104 108');
done_testing();
