#!/usr/local/bin/perl
#u# http://rosettacode.org/wiki/Arithmetic-geometric_mean
#c# 2018-07-15 <RC
#p# OK

use v5.36.0;
 
my ($a0, $g0, $a1, $g1);
 
sub agm ($a0, $g0) {
    do { 
        $a1 = ($a0 + $g0)/2; 
        $g1 = sqrt($a0 * $g0); 
        $a0 = ($a1 + $g1)/2; 
        $g0 = sqrt($a1 * $g1); 
    } while ($a0 != $a1); 
    return $a0;
}
 
say my $result = agm(1, 1/sqrt(2)) . "\n";

my $ref = <<EOD;
0.847213084793979
EOD

use Test::More;
is ($result, $ref);
done_testing();
