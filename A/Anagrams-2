#!/usr/local/bin/perl
#u# http://rosettacode.org/wiki/Anagrams
#c# 2018-07-13 <RC
#p# OK

use strict;
use warnings;
use feature 'say';
my $result;

my(%anagram,@temp);
my $max = 0;

for (split("\n", `cat ref/unixdict.txt`))
    {push @{$anagram{ join '' => sort split // }}, $_}

$max > @$_  or  $max = @$_    for values %anagram;
@$_ >= $max and push @temp, "@$_\n" for values %anagram;

for my $grams (sort @temp) { $result .= $grams }
say $result;

my $ref = <<END;
abel able bale bela elba
alger glare lager large regal
angel angle galen glean lange
caret carte cater crate trace
elan lane lean lena neal
evil levi live veil vile
END

use Test::More;
is ($result, $ref);
done_testing();
