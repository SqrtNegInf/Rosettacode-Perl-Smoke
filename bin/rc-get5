#!/usr/local/bin/perl
## download a RC page, extract Perl 5 entry
#c# 2018-03-30

use utf8;

use v5.36;
#use Modern::Perl;

my $w = join '_', @ARGV;
$w =~ s#^.*wiki/##;
$w =~ s/#.*//;
$w =~ s/\*$//;
$w =~ s#^\.\./##;
$w =~ s#\s#_#g;

(my $f = $w) =~ s#/#_#g;
$f =~ s#'#_#g;
$f =~ s#\$#_#g;

if (-e "$f") {
for my $i (reverse 1..8) {
    my $j = $i + 1;
    system "mv $f.$i $f.$j" if -e "$f.$i";
}
system "mv $f $f.1" 
}

$w =~ s/'/\\'/g;

my $perl5 = `curl -s -o - 'https://rosettacode.org/wiki/$w' | tee _download.html | perl -0 -npe 's/^.*id="Perl".(.*?)<h2>.*/\$1/s; s/&#160;/ /sg;s#<br */>#<br/>\\n#sg' | strip-html - `;
die "No text!" if $perl5 =~ /currently no text/i;

$perl5 =~ s/^Perl\s*\[edit\]//;
$perl5 =~ s/\xA0//g;
$perl5 =~ s/PerlÃ‚/Perl /g;
$perl5 =~ s/\n\s+\n/\n\n/g;

my $ymd = `date +%Y-%m-%d`; chomp $ymd;
my $ym  = `date +%Y.%m`; chomp $ym;

open F, ">$f";
print F <<EOP;
#!/usr/local/bin/perl
#u# https://rosettacode.org/wiki/$w
#c# $ymd <RC
#p# OK

use feature 'say';
#my \$result;
#my \@res;

$perl5

EOD

say my \$result = join "\\n", \@res;
my \$ref = <<'EOD';

use Test::More;
is (\$result, \$ref);
done_testing();
EOP

system "chmod +x $f";
