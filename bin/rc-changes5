#!/usr/local/bin/perl
## recent Perl 5 updates on RosettaCode
#c# 2018-06-30

open RC, qq{/opt/local/bin/curl -s 'http://rosettacode.org/mw/index.php?title=Special:RecentChanges&limit=1000&namespace=0' |};

$cnt = 0;
$new = 'N';

while (<RC>) {
    ($date) = m#<h4>(\d+ \S+) 20\d\d</h4># if m/<h4>/;
    next unless /Perl|SqrtNegInf|Trizen/i;              # always want these
    next if     /Perl_6/;                               # hey, you got your own repository...
    next if $user =~ /Robbie|CraigD|Purefox|Nigel/i;    # users known to be adding non-Perl code

    ($user)  = m#Special:Contributions/(.*?)"#;

    if (/mw-changeslist-title/) {
     ($title) = /mw-changeslist-title">(.*?)</;
    } else {
     ($title) = /index.php.title=(.*?)&/;
    }
    $title =~ s/_/ /g;

    ($time) = m/[;>](\d\d:\d\d)[&<]/;

    $line = sprintf "%5s %-15s %-15s %s\n", $time, $date, $user, $title; # the slug

    if (0 == $cnt) {
        $file = "$ENV{HOME}/perl5/Rosetta-Code/meta/RC-recent.txt";
        open F, "<$file"; $checkpt = <F>; close F;  # read old check-point
        exit if $line eq $checkpt;                  # no changes, bail
        open F, ">$file"; print F $line; close F;   # save new check-point
    } 

    $new = ' ' if $line eq $checkpt;    # stop marking as 'new'
    print "$new $line";
    last if 30 < $cnt++;                # just show recent updates
}
