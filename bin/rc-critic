#!/usr/local/bin/perl
## quick & dirty critic
#    2023-07-15

use v5.36;

use Perl::Critic;
my $file = shift;
my $critic = Perl::Critic->new(-severity => 3);
my @violations = grep { ! /Code before|does not end with|without a label|prototypes|use a real number/i } $critic->critique($file);
print @violations;

__END__

new( [ -profile => $FILE, -severity => $N, -theme => $string, -include
    => \@PATTERNS, -exclude => \@PATTERNS, -top => $N, -only => $B,
    -profile-strictness => $PROFILE_STRICTNESS_{WARN|FATAL|QUIET}, -force =>
    $B, -verbose => $N ], -color => $B, -pager => $string, -allow-unsafe =>
    $B, -criticism-fatal => $B)"
