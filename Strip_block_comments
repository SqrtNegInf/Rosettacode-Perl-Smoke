#!/usr/local/bin/perl
#u# http://rosettacode.org/wiki/Strip_block_comments
#c# 2018-08-13 <RC
#p# OK

use feature 'say';
my $result;

$code = <<'END';
/**
* Some comments
* longer comments here that we can parse.
*
* Rahoo
*/
function subroutine() {
     a = /* inline comment */ b + c;
}
/*/ <-- tricky comments */

/**
* Another comment.
*/
function something() {
    exit;
}
END

#open( FH , "<" , "samplecode.txt" ) or die "Can't open file!$!\n" ;
#my $code = "" ;
#{
#   local $/ ;
#   $code = <FH> ; #slurp mode
#}
#close FH ;

$code =~ s,/\*.*?\*/,,sg ;
$result .= $code . "\n" ;

say $result; 
my $ref = <<'EOD';

function subroutine() {
     a =  b + c;
}



function something() {
    exit;
}

EOD

use Test::More;
is ($result, $ref);
done_testing();
