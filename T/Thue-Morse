#!/usr/local/bin/perl
#u# http://rosettacode.org/wiki/Thue-Morse
#c# 2018-08-10 <RC
#p# OK

use strict;
use warnings;
use feature 'say';

my @res;

sub complement {
    my $s = shift;
    $s =~ tr/01/10/;
    return $s;
}

my $str = '0';

for (0..6) {
    push @res, $str;
    $str .= complement($str);
}

say my $result = join "\n", @res; 

my $ref = <<'EOD';
0
01
0110
01101001
0110100110010110
01101001100101101001011001101001
0110100110010110100101100110100110010110011010010110100110010110
EOD

use Test::More;
chop $ref;
is ($result, $ref);
done_testing;
