use feature 'say';
use warnings;

use utf8;
binmode STDOUT, ":utf8";

my @res;

sub gcd {
  my ($u, $v) = @_;
  while ($v) {
    ($u, $v) = ($v, $u % $v);
  }
  return abs($u);
}

# This is an incredibly inefficient way of finding prime numbers.

push @洧램, 0;
for $t (1..1000) {
    push @洧램, scalar grep { 1 == gcd($_,$t) } 1..$t;
}
 
push @res, sprintf "洧램(%2d) = %3d%s", $_, $洧램[$_], $_ - $洧램[$_] - 1 ? '' : ' Prime' for 1 .. 25;
 
#for $limit (100, 1000, 10000) {
for $limit (100, 1000) {
    push @res, "\nCount of primes <= $limit: " . grep {$_ == $洧램[$_] + 1} 0..$limit;
}

say $result = join "\n", @res;

my $ref = <<'EOD';
