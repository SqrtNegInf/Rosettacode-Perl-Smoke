END
#7th: Index:  434  Last prime:  3037  S-W: 23571113171923293137..30013011301930233037 (1543 digits)
#8th: Index: 1428  Last prime: 11927  S-W: 23571113171923293137..11903119091192311927 (5719 digits)

use Test::More;
chomp $ref;
is($result, $ref);
done_testing();
