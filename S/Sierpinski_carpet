#!/usr/local/bin/perl
#u# http://rosettacode.org/wiki/Sierpinski_carpet
#c# 2018-08-17 <RC
#p# OK

use feature 'say';
my $result;

my @c = '##'; 
@c = (map($_ x 3, @c), map($_.(' ' x length).$_, @c), map($_ x 3, @c)) 
        for 1 .. 3;
$result .= join("\n", @c). "\n";

say $result; 
my $ref = <<'EOD';
######################################################
##  ####  ####  ####  ####  ####  ####  ####  ####  ##
######################################################
######      ############      ############      ######
##  ##      ##  ####  ##      ##  ####  ##      ##  ##
######      ############      ############      ######
######################################################
##  ####  ####  ####  ####  ####  ####  ####  ####  ##
######################################################
##################                  ##################
##  ####  ####  ##                  ##  ####  ####  ##
##################                  ##################
######      ######                  ######      ######
##  ##      ##  ##                  ##  ##      ##  ##
######      ######                  ######      ######
##################                  ##################
##  ####  ####  ##                  ##  ####  ####  ##
##################                  ##################
######################################################
##  ####  ####  ####  ####  ####  ####  ####  ####  ##
######################################################
######      ############      ############      ######
##  ##      ##  ####  ##      ##  ####  ##      ##  ##
######      ############      ############      ######
######################################################
##  ####  ####  ####  ####  ####  ####  ####  ####  ##
######################################################
EOD

use Test::More;
is ($result, $ref);
done_testing();
