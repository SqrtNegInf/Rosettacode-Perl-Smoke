#!/usr/local/bin/perl

use v5.36;

sub F($n, $x, $y) { $n ? $y ? F($n-1, F($n,$x,$y-1), F($n,$x,$y-1)+$y) : $x : $x+$y }

sub F2($n, $x, $y) { $n == 0 ? $x+$y : $y == 0 ? $x : F $n-1, F($n,$x,$y-1), F($n,$x,$y-1)+$y }

sub F3($n, $x, $y) {
  return $x + $y if $n == 0;
  return $x      if $y == 0;
  F($n-1, F($n, $x, $y-1), F($n, $x, $y-1) + $y)
}

say F 0, 0, 0;
#0
say F 1, 1, 1;
#3
say F 2, 1, 1;
#8
say F2 3, 1, 1;
#10228
say F 2, 2, 1;
#27


