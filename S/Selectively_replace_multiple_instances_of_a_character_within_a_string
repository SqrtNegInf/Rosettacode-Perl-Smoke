#!/usr/local/bin/perl
#u# http://rosettacode.org/wiki/Selectively_replace_multiple_instances_of_a_character_within_a_string
#c# 2022-05-31 >RC
#p# OK

use strict;
use warnings;
use feature 'say';

sub transmogrify {
    my($str, %sub) = @_;
    for my $l (keys %sub) {
        $str =~ s/$l/$_/ for split '', $sub{$l}; 
        $str =~ s/_/$l/g;
    }
    $str
}

my $word = 'abracadabra';
say my $result = "$word -> " . transmogrify $word, 'a' => 'AB_CD', 'r' => '_F', 'b' => 'E';

my $ref = <<'END';
abracadabra -> AErBcadCbFD
END

use Test::More;
chomp $ref;
is($result, $ref);
done_testing();
