#!/usr/local/bin/perl
#u# http://rosettacode.org/wiki/Show_the_(decimal)_value_of_a_number_of_1s_appended_with_a_3,_then_squared
#c# 2021-04-15 <RC
#p# OK

my @res;
use strict;
use warnings;
use feature 'say';

use bigint;
 
for ( 0 .. 8 ) {
    my $number = 1 x $_**2 . 3;
    push @res, "$number  " . $number ** 2;
}

say my $result = join "\n", @res;

my $ref = <<'EOD';
3  9
13  169
11113  123498769
1111111113  1234567905432098769
11111111111111113  123456790123456832098765432098769
11111111111111111111111113  123456790123456790123456832098765432098765432098769
1111111111111111111111111111111111113  1234567901234567901234567901234567905432098765432098765432098765432098769
11111111111111111111111111111111111111111111111113  123456790123456790123456790123456790123456790123498765432098765432098765432098765432098765432098769
11111111111111111111111111111111111111111111111111111111111111113  123456790123456790123456790123456790123456790123456790123456790165432098765432098765432098765432098765432098765432098765432098769
EOD

use Test::More;
chomp $ref;
is ($result, $ref);
done_testing;
