#!/usr/local/bin/perl
#u# http://rosettacode.org/wiki/Sum_of_squares
#c# 2018-08-12 <RC
#p# OK

use feature 'say';
my $result;

sub sum_of_squares {
  my $sum = 0;
  $sum += $_**2 foreach @_;
  return $sum;
}

$result .= sum_of_squares(3, 1, 4, 1, 5, 9). "\n";

#or

use List::Util qw(reduce);
sub sum_of_squares {
  reduce { $a + $b **2 } 0, @_;
}

$result .= sum_of_squares(3, 1, 4, 1, 5, 9). "\n";

say $result;
my $ref = <<'EOD';
133
133
EOD

use Test::More;
is ($result, $ref);
done_testing();
