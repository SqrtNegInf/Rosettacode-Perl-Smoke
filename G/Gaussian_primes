#!/usr/local/bin/perl
#u# http://rosettacode.org/wiki/Gaussian_primes
#c# 2022-07-25 <RC
#p# OK
#n# nicer table than RC

use v5.36;

use ntheory qw( is_prime );

sub table ($c, @V) { my $t = $c * (my $w = 7); ( sprintf( ('%'.$w.'s')x@V, @V) ) =~ s/.{1,$t}\K/\n/gr }

my ($plot, @primes) = gaussianprimes(10);
say my $result = "Primes within 10\n" . table(15, @primes);
#my $result = "Primes within 10\n" . join(',  ', @primes) =~ s/.{94}\K  /\n/gr;
($plot, undef) = gaussianprimes(50);
my $plot50 = "Plot within 50\n$plot";

sub gaussianprimes {
    my $size = shift;
    my $plot = ( ' ' x (2 * $size + 1) . "\n" ) x (2 * $size + 1);
    my @primes;
    for my $A ( -$size .. $size ) {
        my $limit = int sqrt $size**2 - $A**2;
        for my $B ( -$limit .. $limit ) {
            my $norm = $A**2 + $B**2;
            is_prime( $norm ) or ($norm - 3) % 4 == 0 or next;
            push @primes, sprintf("%2d%2di", $A, $B) =~ s/(\d) (\d)/$1+$2/r;
            substr $plot, ($B + $size + 1) * (2 * $size + 2) + $A + $size + 1, 1, 'X';
        }
    }
    return $plot, @primes;
}

