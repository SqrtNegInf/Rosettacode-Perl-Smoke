#!/usr/local/bin/perl
#u# http://rosettacode.org/wiki/Reflection_List_properties
#n# nocode
#c# 2019-03-28 >RC
#p# OK

no strict 'refs';
use feature 'say';

{
     package Point;
     use Class::Spiffy -base;

     field 'x';
     field 'y';
}

{
     package Circle;
     use base qw(Point);
     field 'r';
}

package main;

use Data::Dumper;

my $p1 = Point->new(x => 8, y => -5);

my $c1 = Circle->new(r => 4);
my $c2 = Circle->new(x => 1, y => 2, r => 3);

use Scalar::Util qw(blessed);
say blessed( $p1 );

say Dumper $c1;
say Dumper $c2;
