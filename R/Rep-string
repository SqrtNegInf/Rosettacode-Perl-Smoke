#!/usr/local/bin/perl
#u# http://rosettacode.org/wiki/Rep-string
#c# 2018-08-18 <RC
#p# OK

use feature 'say';
my $result;

foreach (qw(1001110011 1110111011 0010010010 1010101010 1111111111 0100101101 0100100 101 11 00 1)) {
    $result .= "$_\n";
    if (/^(.+)\1+(.*$)(?(?{ substr($1, 0, length $2) eq $2 })|(?!))/) {
        $result .= (' ' x length $1). "$1\n\n";
    } else {
        $result .= " (no repeat)\n\n";
    }
}

say $result;
my $ref = <<'EOD';
1001110011
     10011

1110111011
    1110

0010010010
   001

1010101010
    1010

1111111111
     11111

0100101101
 (no repeat)

0100100
   010

101
 (no repeat)

11
 1

00
 0

1
 (no repeat)

EOD

use Test::More;
is ($result, $ref);
done_testing();
