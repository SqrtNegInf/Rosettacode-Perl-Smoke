#!/usr/local/bin/perl5.32.1
#u# http://rosettacode.org/wiki/Color_quantization
#c# 2019-10-14 >RC
#p# OK
#n# at long last, actually testing

use strict;
use warnings;
use feature 'say';

use Imager;

my $img = Imager->new;
$img->read(file => 'ref/frog.png');
my $img16 = $img->to_paletted({ max_colors => 16});
$img16->write(file => "run/frog-16.png");

say my $result = `/opt/local/bin/compare -metric MAE ref/frog-16.png run/frog-16.png null: 2>&1`;

use Test::More;
is $result, '2321.22 (0.0354196)';
done_testing();
