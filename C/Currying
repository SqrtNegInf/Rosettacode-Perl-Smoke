#!/usr/local/bin/perl
#u# http://rosettacode.org/wiki/Currying
#c# 2018-07-26 <RC
#p# OK

use strict;
use warnings;
use feature 'say';
my $result;

# This is a Perl 5 example of a general curry function and curried plus using closures:

sub curry{
  my ($func, @args) = @_;
 
  sub {
    #This @_ is later
    &$func(@args, @_);
  }
}
 
sub plusXY{
  $_[0] + $_[1];
}
 
my $plusXOne = curry(\&plusXY, 1);
say $result = &$plusXOne(3);

use Test::More;
is ($result, '4');
done_testing();
