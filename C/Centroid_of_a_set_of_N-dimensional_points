#!/usr/local/bin/perl
#u# https://rosettacode.org/wiki/Centroid_of_a_set_of_N-dimensional_points
#c# 2023-08-10 >RC
#p# OK

use v5.36;

my @res;

sub centroid_alt ($LoL) {
    my $n = $#{ $LoL       };
    my $d = $#{ $LoL->@[0] };
    my @C = 0 x ($d+1);
    for my $i (0..$d) {
        $C[$i] += $LoL->@[$_]->@[$i] for 0..$n;
        $C[$i] /= $n+1
    }
    @C
}

sub centroid ($LoL) {
    my $n = $#{ $LoL       };
    my $d = $#{ $LoL->@[0] };
    my @C = 0 x ($d+1);
    for my $a (0..$d) {
        for my $b (0..$n) {
           #$C[$a] += (@{(@{$LoL})[$b]})[$a];     # traditional
            $C[$a] += $LoL->@[$b]->@[$a];         # double postfix-deref, cute
        }
        $C[$a] /= $n+1; 
    }
    @C
}

my @tests = (
    [ [1,], [2,], [3,] ],
    [ [8, 2], [0, 0] ],
    [ [5, 5, 0], [10, 10, 0] ],
    [ [1, 3.1, 6.5], [-2, -5, 3.4], [-7, -4, 9], [2, 0, 3] ],
    [ [0, 0, 0, 0, 1], [0, 0, 0, 1, 0], [0, 0, 1, 0, 0], [0, 1, 0, 0, 0] ],
);

push @res, join ' ', centroid($_) for @tests;

say my $result = join "\n", @res;

my $ref = <<'EOD';
2
4 1
7.5 7.5 0
-1.5 -1.475 5.475
0 0.25 0.25 0.25 0.25
EOD

use Test::More;
chomp $ref;
is ($result, $ref);
done_testing;
