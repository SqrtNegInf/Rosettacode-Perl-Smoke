#!/usr/local/bin/perl
#u# http://rosettacode.org/wiki/Calculating_the_value_of_e
#c# 2018-08-23 >RC
#p# OK

use strict;
use warnings;
use feature 'say';

use bignum qw(bexp e);

# same as built-in, with 'bignum' in force
my $e = 2;
my $f = 1;
my($n,$e0);
do { 
    $e0 = $e;
    $n++;
    $f *= 2*$n * (1 + 2*$n);
    $e += (2*$n + 2) / $f;
} until ($e-$e0) < 1.0e-39;

say e;

# module, high precision
my $result = bexp(1,1131);
 
print "Computed e = " . substr($e, 0, 41),  "\n";
print "Built-in e = " . e,  "\n";
print "Error      = " . (e-$e),  "\n";
print "Iterations = " . $n,  "\n";
 
my $ref =<<'END';
2.
END

use Test::More;
is(substr($e,0,41), '2.718281828459045235360287471352662497757');
chop $ref;
is($result, $ref);
done_testing;
