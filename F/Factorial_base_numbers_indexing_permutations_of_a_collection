# if cached value available, return it; else compute, cache and return
my @fact = (1);
sub factorial { $fact[ $_[0] ] //= $_[0] * factorial($_[0] - 1) }

__END__

sub base {
    my($n, 'F', $length) = @_;
    #constant @fact = [\*] 1 .. *;
    #my $i = $length // @fact.first: * > $n, :k;
    my $f;
    #[ @fact[^$i].reverse.map: { ($n, $f) = $n.polymod($_); $f } ]
}

sub fpermute {
    my (@a , *@f)  = @_;
    (^@f).map: { @a[$_ .. $_ + @f[$_]].=rotate(-1) }; 
    @a 
}

push @res, "Part 1: Generate table";
push @res, $_.&base('F', 3).join('.') ~ ' -> ' ~ [0,1,2,3].&fpermute($_.&base('F', 3)).join for ^24;

# ======

#push @res, "\nPart 3: Generate the given task shuffles";

my $omega = qw<
