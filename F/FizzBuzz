use Test::More;
my $result1 = join "\n", @res1; $result1 .= "\n";
my $result4 = join "", @res4; 
$result5 .= "\n";
is ($result1, $ref);
is ($result2, $ref);
is ($result3, $ref);
is ($result4, $ref);
is ($result5, $ref);
is ($result6, $ref);
done_testing();
