#!/usr/local/bin/perl
#u# http://rosettacode.org/wiki/Range_expansion
#c# 2018-08-19 <RC
#p# OK

use feature 'say';
my $result;

# One-liner:
sub rangex {
    map { /^(.*\d)-(.+)$/ ? $1..$2 : $_ } split /,/, shift
}
say $result = join(',', rangex('-6,-3--1,3-5,7-11,14,15,17-20'));# , "\n";

#Alternative:
sub rangex2 {
    (my $range = shift) =~ s/(?<=\d)-/../g;
    eval $range;
}
$result2 = join(',', rangex('-6,-3--1,3-5,7-11,14,15,17-20'));# , "\n";

use Test::More;
is ($result, '-6,-3,-2,-1,3,4,5,7,8,9,10,11,14,15,17,18,19,20');
is ($result2, '-6,-3,-2,-1,3,4,5,7,8,9,10,11,14,15,17,18,19,20');
done_testing();
